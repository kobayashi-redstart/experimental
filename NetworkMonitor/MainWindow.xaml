<Window x:Class="NetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="ネットワーク監視" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Name="StatusBorder" Background="Green" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Name="StatusText" Text="接続中" Foreground="White" 
                   FontSize="18" Margin="0,0,20,0"/>
                <TextBlock Name="AverageText" Text="平均: 0ms" Foreground="Yellow" 
                   FontSize="18" FontWeight="Bold"/>
            </StackPanel>
        </Border>
        
        <lvc:CartesianChart Grid.Row="1" LegendLocation="Bottom">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Title="応答時間 (ms)" Values="{Binding ChartValues}" 
                                PointGeometry="{x:Null}" LineSmoothness="0.5"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="時間 (秒)"></lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="ミリ秒" MinValue="0" MaxValue="1000"></lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</Window>
    